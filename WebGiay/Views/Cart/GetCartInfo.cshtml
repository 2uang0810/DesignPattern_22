@using WebGiay.Models
@model List<CartItem>

@{
    ViewBag.Title = "GetCartInfo";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="container-fluid pt-5">
    <div class="row px-xl-5">
        <div class="col-lg-8 table-responsive mb-5">
            <table class="table table-bordered text-center mb-0">
                <thead class="bg-secondary text-dark">
                    <tr>
                        <th>Hình ảnh</th>
                        <th>Tên sản phẩm</th>
                        <th>Giá</th>
                        <th>Số lượng</th>
                        <th>Tổng </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody class="align-middle">
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td class="align-middle"><img src="~/Content/images/@item.ImagePro" alt="" style="width: 50px;"></td>
                        <td class="align-middle">@item.NamePro</td>
                        <td class="align-middle">@item.Price</td>
                        <td class="align-middle"> @item.Number</td>
                        <td class="align-middle">@item.FinalPrice()</td>
                        <td class="align-middle"><a href="/Cart/RemoveCart/@item.ProductID">Xóa</a></td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="col-lg-4">
            <form class="mb-5" action="">
                <div class="input-group">
                    <input type="text" class="form-control p-4" placeholder="Mã khuyến mãi">
                    <div class="input-group-append">
                        <button class="btn btn-primary">Add Vourcher</button>
                    </div>
                </div>
            </form>
            <div class="card border-secondary mb-5">
                <div class="card-header bg-secondary border-0">
                    <h4 class="font-weight-semi-bold m-0">Tóm tắt đơn hàng</h4>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-3 pt-1">
                        <h6 class="font-weight-medium">Số lượng sản phẩm</h6>
                        <h6 class="font-weight-medium">@ViewBag.TotalNumber</h6>
                    </div>
                </div>
                <div class="card-footer border-secondary bg-transparent">
                    <div class="d-flex justify-content-between mt-2">
                        <h4 class="font-weight-bold">Tổng tiền: @ViewBag.TotalPrice </h4>
                        <h5 class="font-weight-bold">Thành tiền</h5>
                        <h5 class="font-weight-bold">@ViewBag.TotalPrice</h5>
                    </div>

                    <div class="card-footer border-secondary bg-transparent">
                        <div class="d-flex justify-content-between mt-2">
                            <h4 class="font-weight-bold">Discound</h4>
                        </div>

                        <div class="card-footer border-secondary bg-transparent">
                            <div class="d-flex justify-content-between mt-2">
                                <h4 class="font-weight-bold">Tổng tiền: @ViewBag.TotalPrice </h4>
                            </div>
                            <button class="btn btn-block btn-primary my-3 py-3">
                                @Html.ActionLink("Check Out", "ConfirmCart", null, new
                                {
                                    @class = "btn btn-primary"
                                })
                            </button>
                        </div>
                    </div>
                </div>
    </div>
</div>

