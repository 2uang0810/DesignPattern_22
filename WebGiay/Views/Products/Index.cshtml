@model IEnumerable<WebGiay.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2 style="text-align:center">Quản lý sản phẩm</h2>

<p>
    @Html.ActionLink("Thêm Sản phẩm", "Create",  null, new { @class = "btn btn-primary" })
</p>
<div class="">
    @using (Html.BeginForm("Index", "Products", FormMethod.Get))
    {
        <input type="text" name="_name" />
        <input type="submit" value="Search" />
    }
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NamePro)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DecriptionPro)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImagePro)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category1.NameCate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NamePro)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DecriptionPro)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ImagePro)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Category1.NameCate)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.ProductID }, new { @class = "btn btn-primary" }) |
            @Html.ActionLink("Details", "Details", new { id = item.ProductID }, new { @class = "btn btn-success"}) |
            @Html.ActionLink("Delete", "Delete", new { id = item.ProductID },new{ @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>