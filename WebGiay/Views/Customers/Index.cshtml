@model IEnumerable<WebGiay.Models.Customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 style="text-align:center">Quản lý người dùng</h2>
<p>
<p>
    @Html.ActionLink("Thêm User", "Create", null, new { @class = "btn btn-primary" })
</p>
</p>
<table class="table">
    <tr>
        <th>
            Tên User
        </th>
        <th>
            SĐT
        </th>
        <th>
           Email
        </th>
        <th>
            Password
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NameCus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneCus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmailCus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PassCus)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.IDCus }, new { @class = "btn btn-primary" }) |
                @Html.ActionLink("Details", "Details", new { id = item.IDCus }, new { @class = "btn btn-success" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.IDCus }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
